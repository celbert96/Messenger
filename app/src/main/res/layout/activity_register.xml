<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    tools:context=".RegisterActivity">

   <TextView
        android:id="@+id/register_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/register_title"
        android:fontFamily="cursive"
        android:textSize="50sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/username_et_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Username"
        android:background="@drawable/et_rounded_corners"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="10dp"
        app:layout_constraintLeft_toLeftOf="@id/register_title_tv"
        app:layout_constraintRight_toRightOf="@id/register_title_tv"
        app:layout_constraintTop_toBottomOf="@id/register_title_tv"/>
    <EditText
        android:id="@+id/email_et_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:background="@drawable/et_rounded_corners"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/username_et_register"
        app:layout_constraintRight_toRightOf="@id/username_et_register"
        app:layout_constraintTop_toBottomOf="@id/username_et_register"/>
    <EditText
        android:id="@+id/passwd_et_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:background="@drawable/et_rounded_corners"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/email_et_register"
        app:layout_constraintRight_toRightOf="@id/email_et_register"
        app:layout_constraintTop_toBottomOf="@id/email_et_register"/>
    <Button
        android:id="@+id/register_btn_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="REGISTER"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/btn_rounded_corners"
        app:layout_constraintLeft_toLeftOf="@+id/passwd_et_register"
        app:layout_constraintRight_toRightOf="@id/passwd_et_register"
        app:layout_constraintTop_toBottomOf="@id/passwd_et_register"/>
    <TextView
        android:id="@+id/existing_account_tv_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Sign in with existing account."
        android:layout_marginTop="15dp"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="@+id/register_btn_register"
        app:layout_constraintRight_toRightOf="@id/register_btn_register"
        app:layout_constraintTop_toBottomOf="@id/register_btn_register"
        />
    <TextView
        android:id="@+id/fgt_pswd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Forgot Password"
        android:layout_marginTop="15dp"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="@+id/existing_account_tv_register"
        app:layout_constraintRight_toRightOf="@id/existing_account_tv_register"
        app:layout_constraintTop_toBottomOf="@id/existing_account_tv_register"
     />


</android.support.constraint.ConstraintLayout>